programa {
  funcao inicio() {
    

   inventario()
  }

  funcao inventario(){
  cadeia lista[3]
  inteiro item

    escreva("Seus itens: \n")
    escreva("1- Poção de cura \n")
    escreva("2- Grimório \n")
    escreva("3- Sair \n")
    leia(item)

    escolha(item) {
       caso 1 :
       escreva("Poção de cura foi usada \n")
        
        pare

       caso 2 :
       escreva("Uma estranha energia emana do grimório \n")

       pare

       caso 3 :
       //Volta pra seleção de ação

       pare

       caso contrario :
        escreva("Opção inválida \n")

        pare
    }
  }
  


